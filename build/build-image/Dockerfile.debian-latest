FROM debian:testing
RUN apt-get update -qyy \
    && apt-get install -y --no-install-recommends \
        at-spi2-core \
        build-essential \
        desktop-file-utils \
        cmake \
        hicolor-icon-theme \
        git \
        intltool \
        glib-networking \
        libexiv2-dev \
        libgtk-3-dev \
        libcfitsio-dev \
        libfftw3-dev \
        libgsl-dev \
        libconfig-dev \
        libopencv-dev \
        librsvg2-dev \
        libraw-dev \
        libffms2-dev \
        libtiff-dev \
        libjpeg-dev \
        libheif-dev \
        libpng-dev \
        libavformat-dev \
        libavutil-dev \
        libavcodec-dev \
        libswscale-dev \
        libswresample-dev \
        libcurl4-gnutls-dev \
        wcslib-dev \
        python3 \
        python3-pip \
        libjson-glib-dev \
        gcovr \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* 
RUN python3 -m pip install meson ninja
